@model IEnumerable<CrudVentasAlejandra.Models.DetallesVenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Detalles de Ventas</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Detalle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.IdProductos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta.IdVenta)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.DetalleVentaId">Editar</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.DetalleVentaId">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DetalleVentaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
